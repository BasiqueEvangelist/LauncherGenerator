{
  "$schema": "https://raw.githubusercontent.com/nuke-build/nuke/master/source/Nuke.CodeGeneration/schema.json",
  "name": "Cargo",
  "officialUrl": "https://www.rust-lang.org/",
  "pathExecutable": "cargo",
  "customLogger": true,
  "tasks": [
    {
      "postfix": "Build",
      "definiteArgument": "build",
      "settingsClass": {
        "properties": [
          {
            "name": "Release",
            "type": "bool",
            "format": "--release"
          },
          {
            "name": "TargetDir",
            "type": "string",
            "format": "--target-dir {value}"
          }
        ]
      }
    }
  ]
}